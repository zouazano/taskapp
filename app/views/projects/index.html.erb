<h1>Projects</h1>

<ul>

<% @projects.each do |project| %>	
<li><%= link_to project.title, project_path(project.id) %>
	(<%= project.tasks.unfinished.count %>/<%= project.tasks.count %>)
	<%= link_to "[編集しよう]",edit_project_path(project.id) %>
	<%= link_to "[削除しよう]",project_path(project.id),
	method: :delete, data: { confirm: "本当に削除しますか。"}%>
</li>
<% end %>

</ul>

<p><%= link_to "Add projects", new_project_path %></p>